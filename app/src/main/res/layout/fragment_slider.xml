<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="edu.fje.dam.mqtt_graph.Charts.SliderFragment">


    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center_horizontal"
        card_view:cardBackgroundColor="@color/colorPrimary"
        android:foregroundGravity="center"
        android:layout_width="190dp"
        android:layout_height="190dp"
        card_view:cardCornerRadius="4dp">


        <com.akaita.android.circularseekbar.CircularSeekBar
            android:id="@+id/slider"
            card_view:min="0"
            card_view:max="1023"
            android:layout_width="match_parent"
            card_view:showInnerCircle="true"
            card_view:showIndicator="true"
            android:layout_margin="17dp"
            card_view:ringWidth="0.4"
            card_view:speedMultiplier="10"
            card_view:innerCircleColor="@color/color_accent"
            card_view:progressTextColor="@color/colorPrimaryDark"
            card_view:progressTextSize="20"
            android:foregroundGravity="center_horizontal"
            android:layout_height="match_parent" />


    </android.support.v7.widget.CardView>



</LinearLayout>
